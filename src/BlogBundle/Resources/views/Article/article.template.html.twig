<div class="container">

	<div class="row">
        <div class="col s6 m6 offset-s3 offset-m3">
          <div class="card blue-grey darken-4">
            <div class="card-content white-text">
              <span class="card-title"><a href="{{ path('blog_article', {'id': article.id}) }}">{{ article.name }}</a></span>
              <p>
				    Cat√©gorie: <a href="{{ path('blog_articles_by_category', {'category_name': article.category.name}) }}"> {{ article.category.name }} </a>
				<br>
				Auteur: {{ article.author.name }}
				<br>
				{% for tag in article.tags %}
				    {%  if loop.last %}
				       <div class="chip">
				           {{ tag.name }}
				       </div>
				    {% else %}
				<div class="chip"> {{ tag.name }} </div> -
				    {% endif %}
				{% else %}
				    Aucun Tag
				{% endfor %}
				<br>
				Commentaires: {{ article.comments|length }}

				</p>
            </div>            
          </div>
        </div>
    </div>

</div>