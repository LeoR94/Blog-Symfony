{% extends 'BlogBundle::layout.html.twig' %}

{% block content %}
    <div class="container">
    <h1>{{ article.name }}</h1>
        <div class="row">
            <div class="col s12 m12">
                  <div class="card blue-grey darken-2">
                        <div class="card-content white-text">
                          <span class="card-title"></span>
                          <p>
                          <div class="chip">
                            Ecris par : {{ article.author.name }}
                        </div>             
                        <div class="chip">
                            Tags:         
                            {% for tag in article.tags %}
                                {{ tag.name }}
                            {% else %}
                                Aucun Tag
                            {% endfor %}
                        </div>
                        <div class="chip">
                            Categorie: {{ article.category.name }}
                        </div>            
                        <div class="chip">
                            Publié le {{ article.date|date("d/m/Y") }}
                        </div>
                        </p><br>
                            <p>{{ article.content }}</p>
                        </div>
                  </div>
            </div>
        </div>

       

<h2>Commentaires</h2>

    <div class="row">
        <div class="col s6 m6 offset-s3 offset-m3">
          <div class="card blue-grey darken-4">
                <div class="card-content white-text">
                    {% for comment in comments %}
                      <span class="card-title">{{ comment.author }}</span>
                      <p>
                      <div class="chip">
                        Posté le : {{ comment.date|date('d/m/Y') }}
                      </div>
                      </p><br>
                      <p>{{ comment.content }}</p>
                      {% else %}
                        <p>Aucun commentaire</p>
                    {% endfor %}
                </div>
          </div>
        </div>
    </div>


    <div class="row">
            <div class="col s8 m8 offset-s2 offset-m2">
                <div class="card blue-grey darken-4">
                    <div class="card-content white-text">
                        <span class="card-title">Laisse un commentaire</span>
                        {{ form_start(comment_form) }}
                        {{ form_end(comment_form) }}
                    </div>            
                </div>
            </div>
      </div>


    </div>
{% endblock %}
